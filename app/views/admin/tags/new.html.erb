<h1>Admin::Tags#new</h1>

<%= form_for [:admin, @tag] do |f|%>
	<%= f.text_field :name, placeholder: 'eg Ruby, Python, Php'%>
	<%= f.submit %>
<% end %>

<table>
	<thead>
			<tr>
				<th>Name</th>
				<th>Status</th>
				<th>Created</th>
				<th>Actions</th>
			</tr>
	</thead>
	<tbody>
		<% @tags.each do |tag|%>
		<tr>
			<td><%= tag.name%></td>
			<td><%= status_converter(tag.in_use?, truthy: 'in use', falsey: 'not in use') %></td>
			<td><%= time_ago_in_words(tag.created_at) %></td>
			<td>
				<%= link_to edit_admin_tag_path(tag) do %>
					<button type="button">Edit</button>
				<% end %>

				<%= create_deletable_button tag %>
			</td>	
		</tr>
		<% end %>
	</tbody>
</table>
